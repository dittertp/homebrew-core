    # ToDo: implement bottle building here :)
    echo "Building bottle -> $1"
}

function upload_bottle {
    # ToDo: implement bottle uploading here :)
    echo "Uploading bottle -> $1"
}

echo ${TRAVIS_COMMIT_MESSAGE/"[build]"/} | sed -n 1'p' | tr ', ' '\n' | while read FORMULA; do
